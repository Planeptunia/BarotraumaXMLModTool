<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BXMT.MainPage"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label x:Name="FilepathLabel" Text="None"/>
            <StackLayout Orientation="Vertical" x:Name="ItemStack"></StackLayout>
            <Button x:Name="GetFilepathButton" Text="Open XML File" Clicked="OnGetFilepathClicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
